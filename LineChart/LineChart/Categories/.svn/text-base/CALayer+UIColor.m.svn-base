#import "CALayer+UIColor.h"

@implementation CALayer(UIColor)

- (void)setBorderUIColor:(UIColor*)color {
  self.borderColor = color.CGColor;
}

- (UIColor*)borderUIColor {
  return [UIColor colorWithCGColor:self.borderColor];
}

@end